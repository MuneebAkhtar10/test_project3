</head>
</html>


<hr>
<div class="grid-container2">
  <div class="item2">
   
      <%= bug.title%>
    
  </div>   
  <div class="item2">
  
      <%= bug.body%>
    
  </div>
  <div class="item2">
    <% if bug.image.present?%>
      <div style = "width:100px; height:70px">
        <%= link_to image_tag(bug.image, style: 'width:100%', padding: '200px', margin: '10px'),projects_path %>
      </div>
      <%else %>
        <p>
          <strong>No Attachment found</strong>
        </p>
    <% end %>
  </div>
   <div class="item2">
    <p>
      <%= bug.bug_type%>
    </p>
  </div>
  <div class="item2">
    <p>
      <%= bug.project_bug_status%>
    </p>
  </div>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
  $(document).ready(function () {
    $("#formButton").click(function(){
      $("#form1").toggle();
      });
  });
</script>

  <div class="item2">
    <p>
    <%if policy(bug).dev? || policy(@project).qa? %>
        <button class="button2">
          <%= link_to 'Show', bug_path(bug,project_id: @project.id) %>
        </button>
        <%if policy(@project).qa? %>
          <button class="button4">
            <%= link_to 'delete',  bug,
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
          </button>
        <%end %>
    <% end %>
    </p>
  </div>
</div>

