  display: grid;
  grid-template-columns: auto auto auto auto;
  grid-gap: 0px;
  background-color: white;
  padding: 10px;
}
.grid-container2 > div {
  text-align: center;
  padding: 5px 0;
  font-size: 16px;
  table-layout: fixed;
  width: 40px;
  margin-left: 90px;
}
 .item1 {
  font-size: 22px; 
  grid-row: 1;
}
 .item2 {
  font-size: 16px; 
  grid-row: 1;
}
.grid-container h2{

  color: #683181 ;
}
.functions h1{
  color: #683181;
  font-size: 50px; 

  text-align: center;
}
.button5 {
  background-color: #008CBA;
  text-align: center;

    left: 45%;
    margin: 0;
  position: absolute;

}

.button2 {background-color: #4CAF50;}
.button4 {background-color: #f44336;} /* Red */ 
