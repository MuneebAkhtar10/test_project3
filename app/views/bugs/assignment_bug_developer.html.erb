<p>
  <strong>Title:</strong>
  <%= @bug.title%>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @bug.body%>
</p>

<% if @bug.image.present?%>
  <div style = "width:100px; height:70px">
    <strong>Attachment: </strong>
    <%= link_to image_tag(@bug.image, style: 'width:100%', padding: '200px', margin: '10px'),projects_path %>
  </div>
  <%else %>
    <p>
      <strong>No Attachment found</strong>
    </p>
<% end %>

<p>
  <strong>Bug Status:</strong>
  <%= @bug.project_bug_status%>
</p>
<p></p>
<%if policy(@bug).dev? %>
  <%if current_user.id == @bug.user_bug_id %>
    <%= link_to 'Remove Bug Assignment', remove_bug_developer_path(bug_id: @bug.id, project_id: @project.id)  %>
  <%else%>
    <%= link_to 'Take Bug', assign_bug_developer_path(bug_id: @bug.id, project_id: @project.id)  %>
  <% end %>
<% end %>

<%if policy(@project).qa? %>
<p>
  <%= link_to 'Delete', @bug,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>
<% end %>
<p></p>
<%= form_with(model: [ @project, @project.bugs.build ],:authenticity_token => true ,local: true) do |form| %>

  <%if current_user.id == @bug.user_bug_id %>
    <div class="control-group">
      <%= form.label "project_bug_status" , class: "control-label"%>
      <div class="control">
      <%= form.select(:project_bug_status, options_for_select([['New', 'new'],['Started','started'],['resolved','resolved']])) %>
      </div>
    </div>
  <% end %>


<!-- <p></p>
<%= link_to 'Save Update', assign_status_to_project_path(bug_id: @bug.id, project_id: @project.id, project_bug_status: @project_bug_status )  %>
 -->
<% end%>
<P></P>
<%= link_to 'Back', projects_path %>