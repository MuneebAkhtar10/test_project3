<body>

<div class="header2">
  <h1>Bugzilla</h1>
  <p>By Muneeb</p>
</div>

<div class="header">
  <% if current_user %>
    <%= link_to 'Home', dashboard_index_path %>
    <%= link_to 'Account', edit_user_registration_path  %>
		<%= link_to 'Sign Out',destroy_user_session_path , method: :delete %>
	<% else %>
		<%= link_to "Sign In     ." , new_user_session_path  %>
    <%= link_to ' Sign Up', new_user_registration_path  %>
	<%end %>
</div>


<h2>
  <strong>Title:</strong>
  <%= @project.title %>
</h2>
 
<h2>
  <strong>Text:</strong>
  <%= @project.body %>
</h2>
<h2>
  <strong>User:</strong>
 	 <%= @project.user.email.split('@')[0].capitalize %>
</h2>
<p> </p>
<%if current_user && current_user.projectmanager? && @project.user_id == current_user.id %>
	<div class="item4">
		<%if policy(@project).create? %>
			<p>
      <button class="button2">
				<%= link_to 'click to add developers', assign_project_to_developer_project_path(@project.id) %>
			</button>	

       <button class="button3">
	      <%= link_to 'Edit Project', edit_project_path(@project) %>
			</button>
      <button class="button4">
	      <%= link_to 'Destroy', project_path(@project),
	              method: :delete,
	              data: { confirm: 'Are you sure?' } %>
	    </button>
	    </p>  
	  <% end %>
	</div> 
<% end %>

<div class= functions>
	<h1>Bugs</h1>
</div>
<% if @project.bugs %>
	<% if @project.bugs.present? %>
	  <div class="grid-container">
	    <div class="item1"><h2>Title </h2></div>
	    <div class="item1"><h2>Description</h2></div>
	    <div class="item1"><h2>Image</h2></div>
	    <div class="item1"><h2>Bug type</h2></div>
	    <div class="item1"><h2>Bug Status</h2></div>
	    <div class="item1"><h2>Action</h2></div>
	  </div>
	  <%= render @project.bugs%>
	<% else %>
			<div class="grid-container">
    		<div class="item2"><h4>No bugs found for this project </h4></div>
  		</div>
	<%end%>
<%end %> 




<% if current_user && current_user.qa? %>
	<h1> Want to Add a Bug ? </h1>
			<%= render 'bugs/form'%>

<%end %>

<p> </p>
<%= link_to 'Back', projects_path %>
